{
  "type": "object",
  "properties": {
    "userId": { "type": "number" },
    "name": { "type": "string" },
    "role": { "type": "string" },
    "movies": {
      "type": "array",
      "items": { "$ref": "./movie.schema" }
    },
    "serviceUsage": {
      "type": "object",
      "properties": {
        "isLimited": { "type": "boolean" },
        "limit": { "type": "number" },
        "counter": { "type": "number" }
      }
    }
  },
  "required": ["userId", "role"]
}
